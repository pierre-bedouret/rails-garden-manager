function refreshForm(innerHTML) {
  const newPlantForm = document.getElementById('new_plant');
  newPlantForm.innerHTML = innerHTML;
}

function addPlant(newPlant) {
  const cards = document.querySelector('.cards');
  cards.insertAdjacentHTML('beforeend', newPlant);
}

<% if @plant.errors.any? %>
  refreshForm('<%= j render "plants/form", garden: @garden, plant: @plant %>');
<% else %>
  addReview('<%= j render "plants/plant_card", plant: @plant %>');
  refreshForm('<%= j render "plants/form", garden: @garden, plant: Plant.new %>');
<% end %>
