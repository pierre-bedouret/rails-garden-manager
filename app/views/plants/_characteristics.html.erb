<div class="row">
  <div class="col-12 col-md-4">
    <p>Category : <%= @plant.category %></p>
    <p><i class="fas fa-map-marker-alt"></i> <%= @plant.area %></p>
  </div>
  <div class="col-12 col-md-4">
    <p>Flowers' color : <span class="undeline-<%= @plant.flower_color.downcase %>"><%= @plant.flower_color %></span></p>
    <p><i class="fas fa-apple-alt"></i> <%= @plant.fruit ? "Make fruits" : "Don't make any fruit" %></p>
  </div>
  <div class="col-12 col-md-4">
    <p><i class="fas fa-history"></i> Lifetime : <%= pluralize(@plant.lifetime, 'year')%></p>
    <p><i class="fas fa-tree"></i> Maximun size : <%= pluralize(@plant.max_size, 'meter')%></p>
  </div>
<p>You can find it in : <%= link_to @plant.garden.name, garden_path(@plant.garden) %></p>
</div>
